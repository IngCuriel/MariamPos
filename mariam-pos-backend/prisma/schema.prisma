// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  name        String
  status      Int?      //1 activo,  0 desactivado 
  saleType    String?   //pieza-agranel
  price       Float
  cost        Float?
  description String?
  icon        String?
  createdAt   DateTime @default(now())

  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])

  saleDetails SaleDetail[]  //  Relaci贸n inversa

  @@index([code])
  @@index([name])
  @@index([description])
}

model Category {
  id          String   @id @default(uuid())
  name        String
  description String?
  color       String?
  icon        String?
  createdAt   DateTime @default(now())

  Product   Product[]
}

model Client {
   id          String   @id @default(uuid())
   name        String 
}

model Sale {
  id            Int           @id @default(autoincrement())
  folio         String?        
  total         Float
  status        String?        //Pendiente, Pagado
  paymentMethod String?       // Efectivo, Tarjeta, etc.
  createdAt     DateTime      @default(now())
  clientName    String?      

  // Nuevo campo de sincronizaci贸n
  syncStatus    String        @default("pendiente") // pendiente, enviado

  // Relaci贸n con los detalles
  details       SaleDetail[]

  @@index([folio])
  @@index([syncStatus])
}

model SaleDetail {
  id          Int       @id @default(autoincrement())
  quantity    Int
  price       Float
  subTotal    Float
  productName String?
  createdAt   DateTime  @default(now())

  // Relaci贸n con Sale
  saleId      Int
  sale        Sale      @relation(fields: [saleId], references: [id])

  // Relaci贸n con Product
  productId   Int
  product     Product   @relation(fields: [productId], references: [id])

  @@index([saleId])
  @@index([productId])
}