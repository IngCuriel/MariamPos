// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int          @id @default(autoincrement())
  code        String?      @unique // Opcional para permitir c√≥digos generados autom√°ticamente
  name        String
  status      Int?
  saleType    String?
  price       Float        // PRECIO BASE (precio por pieza) ‚Üí para compatibilidad
  cost        Float?
  description String?
  icon        String?
  createdAt   DateTime     @default(now())

  // Nuevas propiedades para inventario
  trackInventory Boolean? @default(false) // si el producto usa inventario 
  
  inventory      Inventory?            // ‚Üê 1:1
  movements      InventoryMovement[]

  // üÜï NUEVO: Identificador de Kit/Combo
  isKit        Boolean   @default(false) // Si es true, es un kit/combo

  categoryId  String
  category    Category     @relation(fields: [categoryId], references: [id])

  // üî• Nueva relaci√≥n (un producto puede tener varias presentaciones)
  presentations ProductPresentation[]

  // Relaci√≥n con envases
  containers   Container[]

  saleDetails SaleDetail[]
  pendingSaleDetails PendingSaleDetail[]
  
  // üÜï NUEVO: Relaci√≥n con items del kit (cuando este Product ES un kit)
  kitItems     KitItem[] @relation("Kit")
  
  // üÜï NUEVO: Relaci√≥n con kits (cuando este Product est√° DENTRO de un kit)
  kitsAsItem   KitItem[] @relation("KitProduct")

  @@index([code])
  @@index([name])
  @@index([description])
  @@index([isKit]) // √çndice para filtrar kits r√°pidamente
}

model ProductPresentation {
  id        Int      @id @default(autoincrement())
  name      String   // Ej: "Pieza", "Cono", "Six"
  quantity  Int      // Ej: 1, 30, 6 ‚Üí unidades reales
  unitPrice Float    // Precio por unidad en esta presentaci√≥n
  isDefault Boolean  @default(false)

  product   Product  @relation(fields: [productId], references: [id])
  productId Int

  // Relaci√≥n con envases
  containers Container[]
  
  // üÜï NUEVO: Relaci√≥n con items de kit (cuando esta presentaci√≥n est√° en un kit)
  kitItems   KitItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Category {
  id          String   @id @default(uuid())
  name        String
  description String? 
  createdAt   DateTime @default(now())
  
  showInPOS     Boolean   @default(false)

  Product   Product[]
}

model Client {
   id          String   @id @default(uuid())
   name        String 
   alias       String?  // Alias o apodo para identificar mejor al cliente
   phone       String?  // N√∫mero de celular/tel√©fono
   
   // Campos de cr√©dito
   allowCredit Boolean  @default(false) // Si el cliente puede comprar a cr√©dito
   creditLimit Float    @default(0)      // L√≠mite de cr√©dito permitido
   
   // Relaciones
   credits     ClientCredit[] // Cr√©ditos pendientes del cliente
   containerDeposits ClientContainerDeposit[] // Dep√≥sitos de envases pendientes
   
   @@index([name])
   @@index([alias])
   @@index([phone])
}

model Sale {
  id            Int           @id @default(autoincrement())
  folio         String?
  total         Float
  status        String?        //Pendiente, Pagado
  paymentMethod String?       // Efectivo, Tarjeta, etc.
  createdAt     DateTime      @default(now())
  clientName    String?
  
  //Sucursal
  branch        String?  @default("Sucursal Defult") 
 
  //Caja de cobro
  cashRegister  String?   @default("Caja 1") 

  // Nuevo campo de sincronizaci√≥n
  syncStatus    String        @default("pendiente") // pendiente, enviado

  // Relaci√≥n con turno de caja
  shiftId       Int?
  shift         CashRegisterShift? @relation(fields: [shiftId], references: [id])

  // Relaci√≥n con los detalles
  details       SaleDetail[]
  
  // Relaci√≥n con cr√©ditos (si la venta gener√≥ un cr√©dito)
  credit        ClientCredit?

  @@index([folio])
  @@index([syncStatus])
  @@index([shiftId])
}

model SaleDetail {
  id          Int       @id @default(autoincrement())
  quantity    Float
  price       Float
  subTotal    Float
  productName String?
  createdAt   DateTime  @default(now())

  // Relaci√≥n con Sale
  saleId      Int
  sale        Sale      @relation(fields: [saleId], references: [id])

  // Relaci√≥n con Product
  productId   Int
  product     Product   @relation(fields: [productId], references: [id])

  @@index([saleId])
  @@index([productId])
}
 
// ============================================================
// üè≠ M√ìDULO DE INVENTARIO
// ============================================================

// ------------------------------------------------------------
// Tabla principal de inventario por producto y sucursal
// ------------------------------------------------------------
model Inventory {
  id               Int       @id @default(autoincrement())

  productId        Int       @unique        // ‚Üê IMPORTANTE
  product          Product   @relation(fields: [productId], references: [id])

  currentStock     Int       @default(0)
  minStock         Int       @default(0)
  maxStock         Int?
  lastMovementDate DateTime?
  trackInventory   Boolean   @default(false)
  branch           String?

  movements        InventoryMovement[]

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}


// ------------------------------------------------------------
// Movimientos de inventario
// ------------------------------------------------------------
model InventoryMovement {
  id         Int       @id @default(autoincrement())
  
  productId  Int
  product    Product   @relation(fields: [productId], references: [id])

  inventoryId Int?
  inventory   Inventory? @relation(fields: [inventoryId], references: [id])

  type       InventoryMovementType
  quantity   Int

  reason     String?
  reference  String?
  notes      String?

  branch     String? // Sucursal
  cashRegister String? // Caja

  createdBy  String?
  createdAt  DateTime @default(now())
}

// ------------------------------------------------------------
// Enum para tipos de movimientos
// ------------------------------------------------------------
enum InventoryMovementType {
  ENTRADA
  SALIDA
  AJUSTE
  TRANSFERENCIA
}

// ============================================================
// üí∞ M√ìDULO DE CORTE DE CAJA
// ============================================================

// ------------------------------------------------------------
// Turnos/Cortes de Caja
// ------------------------------------------------------------
model CashRegisterShift {
  id              Int       @id @default(autoincrement())
  shiftNumber     String    @unique // Folio √∫nico del turno
  branch          String    // Sucursal
  cashRegister    String    // Caja (ej: "Caja 1")
  cashierName     String?   // Nombre del cajero (por ahora string, luego puede ser FK a User)
  
  // Fechas del turno
  startTime       DateTime  @default(now())
  endTime         DateTime?
  
  // Fondos
  initialCash     Float     @default(0) // Fondo inicial
  finalCash       Float?    // Efectivo contado al cerrar
  expectedCash    Float?    // Efectivo esperado (calculado)
  difference      Float?    // Diferencia (finalCash - expectedCash)
  
  // Totales por m√©todo de pago (calculados autom√°ticamente)
  totalCash       Float     @default(0) // Total en efectivo
  totalCard       Float     @default(0) // Total en tarjeta
  totalTransfer   Float     @default(0) // Total en transferencia
  totalOther      Float     @default(0) // Otros m√©todos
  
  // Estado
  status          ShiftStatus @default(OPEN) // OPEN, CLOSED, CANCELLED
  
  // Observaciones
  notes           String?
  
  // Relaci√≥n con ventas
  sales           Sale[]
  
  // Relaci√≥n con movimientos de efectivo
  cashMovements   CashMovement[]
  
  // Relaci√≥n con dep√≥sitos de envases de clientes
  clientContainerDeposits ClientContainerDeposit[]
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([branch, cashRegister])
  @@index([status])
  @@index([startTime])
}

// ------------------------------------------------------------
// Enum para estados de turno
// ------------------------------------------------------------
enum ShiftStatus {
  OPEN      // Turno abierto
  CLOSED    // Turno cerrado
  CANCELLED // Turno cancelado
}

// ------------------------------------------------------------
// Movimientos de Efectivo (Entradas y Salidas)
// ------------------------------------------------------------
model CashMovement {
  id              Int       @id @default(autoincrement())
  shiftId         Int       // Relaci√≥n con el turno
  shift           CashRegisterShift @relation(fields: [shiftId], references: [id])
  
  type            CashMovementType // ENTRADA o SALIDA
  amount          Float     // Monto del movimiento
  reason          String?   // Raz√≥n del movimiento (ej: "Pago a proveedor", "Cobro recibido")
  notes           String?   // Notas adicionales
  
  createdBy       String?   // Usuario que cre√≥ el movimiento
  createdAt       DateTime  @default(now())
  
  @@index([shiftId])
  @@index([type])
  @@index([createdAt])
}

// ------------------------------------------------------------
// Enum para tipos de movimiento de efectivo
// ------------------------------------------------------------
enum CashMovementType {
  ENTRADA  // Entrada de efectivo a la caja
  SALIDA   // Salida de efectivo de la caja
}

// ============================================================
// üë§ M√ìDULO DE USUARIOS/CAJEROS
// ============================================================

model User {
  id          String   @id @default(uuid())
  name        String   // Nombre completo del cajero
  email       String?  @unique // Email (opcional, para futuras autenticaciones)
  phone       String?  // Tel√©fono
  username    String?  @unique // Nombre de usuario (opcional)
  role        UserRole @default(CASHIER) // Rol del usuario
  status      UserStatus @default(ACTIVE) // Estado: activo o inactivo
  branch      String?  // Sucursal asignada
  notes       String?  // Notas adicionales
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([status])
  @@index([role])
  @@index([email])
}

enum UserRole {
  ADMIN      // Administrador
  MANAGER    // Gerente
  CASHIER    // Cajero
  SUPERVISOR // Supervisor
}

enum UserStatus {
  ACTIVE    // Usuario activo
  INACTIVE  // Usuario inactivo
}

// ============================================================
// üí≥ M√ìDULO DE CR√âDITOS
// ============================================================

// ------------------------------------------------------------
// Cr√©ditos Pendientes de Clientes
// ------------------------------------------------------------
model ClientCredit {
  id              Int       @id @default(autoincrement())
  
  // Relaci√≥n con cliente
  clientId        String
  client          Client    @relation(fields: [clientId], references: [id])
  
  // Relaci√≥n con venta que gener√≥ el cr√©dito
  saleId          Int       @unique
  sale            Sale      @relation(fields: [saleId], references: [id])
  
  // Montos
  originalAmount  Float     // Monto original del cr√©dito
  remainingAmount Float     // Monto pendiente por pagar
  paidAmount      Float     @default(0) // Monto total pagado hasta ahora
  
  // Estado
  status          CreditStatus @default(PENDING) // PENDING, PARTIALLY_PAID, PAID
  
  // Fechas
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  paidAt          DateTime? // Fecha en que se pag√≥ completamente
  
  // Notas
  notes           String?
  
  // Relaci√≥n con pagos/abonos
  payments        CreditPayment[]
  
  @@index([clientId])
  @@index([saleId])
  @@index([status])
  @@index([createdAt])
}

// ------------------------------------------------------------
// Abonos/Pagos a Cr√©ditos
// ------------------------------------------------------------
model CreditPayment {
  id              Int       @id @default(autoincrement())
  
  // Relaci√≥n con cr√©dito
  creditId        Int
  credit          ClientCredit @relation(fields: [creditId], references: [id])
  
  // Monto del abono
  amount          Float
  
  // M√©todo de pago
  paymentMethod   String?   // Efectivo, Tarjeta, etc.
  
  // Notas
  notes           String?
  
  // Usuario que registr√≥ el pago
  createdBy       String?
  
  // Fecha
  createdAt       DateTime  @default(now())
  
  @@index([creditId])
  @@index([createdAt])
}

// ------------------------------------------------------------
// Enum para estados de cr√©dito
// ------------------------------------------------------------
enum CreditStatus {
  PENDING         // Pendiente de pago
  PARTIALLY_PAID  // Parcialmente pagado
  PAID            // Completamente pagado
}

// ============================================================
// üïì M√ìDULO DE VENTAS PENDIENTES
// ============================================================

// ------------------------------------------------------------
// Ventas Pendientes (Carritos guardados para cobrar despu√©s)
// ------------------------------------------------------------
model PendingSale {
  id              Int       @id @default(autoincrement())
  code            String    @unique // C√≥digo √∫nico generado autom√°ticamente
  clientName      String?   // Nombre del cliente para recordar
  total           Float     // Total de la venta pendiente
  branch          String?   @default("Sucursal Default")
  cashRegister    String?   @default("Caja 1")
  
  // Relaci√≥n con los detalles del carrito
  details         PendingSaleDetail[]
  
  // Fechas
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([code])
  @@index([clientName])
  @@index([createdAt])
}

// ------------------------------------------------------------
// Detalles de Venta Pendiente
// ------------------------------------------------------------
model PendingSaleDetail {
  id              Int       @id @default(autoincrement())
  
  // Relaci√≥n con PendingSale
  pendingSaleId   Int
  pendingSale     PendingSale @relation(fields: [pendingSaleId], references: [id], onDelete: Cascade)
  
  // Informaci√≥n del producto
  productId       Int
  product         Product   @relation(fields: [productId], references: [id])
  
  // Datos de la venta
  quantity        Float     // Cantidad
  price           Float     // Precio unitario
  subTotal        Float     // Subtotal (quantity * price)
  productName     String?   // Nombre del producto al momento de guardar
  
  // Informaci√≥n de presentaci√≥n (si aplica)
  presentationId  Int?      // ID de la presentaci√≥n si se us√≥
  presentationName String?  // Nombre de la presentaci√≥n
  
  // Informaci√≥n de granel (si aplica)
  saleType        String?   // "Pieza" o "Granel"
  basePrice       Float?    // Precio base para granel
  
  createdAt       DateTime  @default(now())
  
  @@index([pendingSaleId])
  @@index([productId])
}

// ============================================================
// üç∫ M√ìDULO DE ENVASES RETORNABLES
// ============================================================

// ------------------------------------------------------------
// Envases Retornables
// ------------------------------------------------------------
model Container {
  id          Int       @id @default(autoincrement())
  name        String    // Nombre del envase (ej: "Coca Vidrio", "Rega Cerveza")
  quantity    Int       // Cantidad de envases
  importAmount Float    // Importe del dep√≥sito por envase
  
  // Relaci√≥n con producto (opcional - si no tiene presentaci√≥n)
  productId   Int?
  product     Product?  @relation(fields: [productId], references: [id])
  
  // Relaci√≥n con presentaci√≥n (opcional - si el producto tiene presentaci√≥n)
  presentationId Int?
  presentation   ProductPresentation? @relation(fields: [presentationId], references: [id])
  
  // Notas adicionales
  notes       String?
  
  // Estado (similar a Product: null o != 0 = activo, 0 = inactivo)
  status      Int?
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([productId])
  @@index([presentationId])
  @@index([status])
}

// ============================================================
// üç∫ DEP√ìSITOS DE ENVASES POR CLIENTE
// ============================================================

// ------------------------------------------------------------
// Dep√≥sitos de Envases de Clientes
// ------------------------------------------------------------
model ClientContainerDeposit {
  id              Int       @id @default(autoincrement())
  
  // Relaci√≥n con cliente
  clientId        String
  client          Client    @relation(fields: [clientId], references: [id])
  
  // Relaci√≥n con venta que gener√≥ el dep√≥sito
  saleId          Int?      // Opcional, puede ser null si se crea manualmente
  
  // Informaci√≥n del dep√≥sito
  containerName   String    // Nombre del envase (ej: "Coca Vidrio")
  quantity        Int       // Cantidad de envases
  importAmount    Float     // Importe total del dep√≥sito (quantity * unitPrice)
  unitPrice       Float     // Precio unitario del envase
  
  // Estado
  status          ContainerDepositStatus @default(PENDING) // PENDING, RETURNED
  
  // Relaci√≥n con turno de caja
  shiftId         Int?
  shift           CashRegisterShift? @relation(fields: [shiftId], references: [id])
  
  // Relaci√≥n con movimiento de efectivo
  cashMovementId  Int?      // ID del movimiento de efectivo generado
  
  // Notas
  notes           String?
  
  // Fechas
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  returnedAt      DateTime? // Fecha en que se devolvieron los envases
  
  @@index([clientId])
  @@index([saleId])
  @@index([status])
  @@index([createdAt])
  @@index([shiftId])
}

// ------------------------------------------------------------
// Enum para estados de dep√≥sito de envases
// ------------------------------------------------------------
enum ContainerDepositStatus {
  PENDING   // Pendiente de devoluci√≥n
  RETURNED // Devuelto
}

// ============================================================
// üì¶ M√ìDULO DE KITS/COMBOS
// ============================================================

// ------------------------------------------------------------
// Items que componen un Kit/Combo
// ------------------------------------------------------------
model KitItem {
  id          Int       @id @default(autoincrement())
  
  // Relaci√≥n con el kit (Product con isKit = true)
  kitId       Int
  kit         Product   @relation("Kit", fields: [kitId], references: [id], onDelete: Cascade)
  
  // Relaci√≥n con producto que forma parte del kit
  productId   Int
  product     Product   @relation("KitProduct", fields: [productId], references: [id])
  
  // Relaci√≥n con presentaci√≥n (opcional)
  presentationId  Int?
  presentation    ProductPresentation? @relation(fields: [presentationId], references: [id])
  
  // Cantidad de este producto en el kit
  quantity    Float     @default(1)
  
  // Orden de visualizaci√≥n
  displayOrder Int      @default(0)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([kitId])
  @@index([productId])
  @@unique([kitId, productId, presentationId]) // Evitar duplicados
}

// ============================================================
// üñ®Ô∏è M√ìDULO DE IMPRESORAS
// ============================================================

// ------------------------------------------------------------
// Impresoras registradas
// ------------------------------------------------------------
model Printer {
  id          Int      @id @default(autoincrement())
  name        String   @unique // Nombre de la impresora (ej: "EPSON L3110")
  isDefault   Boolean  @default(false) // Si es la impresora predeterminada
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([isDefault])
  @@index([name])
}
