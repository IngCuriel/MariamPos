// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int          @id @default(autoincrement())
  code        String       @unique
  name        String
  status      Int?
  saleType    String?
  price       Float        // PRECIO BASE (precio por pieza) ‚Üí para compatibilidad
  cost        Float?
  description String?
  icon        String?
  createdAt   DateTime     @default(now())

  categoryId  String
  category    Category     @relation(fields: [categoryId], references: [id])

  // üî• Nueva relaci√≥n (un producto puede tener varias presentaciones)
  presentations ProductPresentation[]

  saleDetails SaleDetail[]

  @@index([code])
  @@index([name])
  @@index([description])
}

model ProductPresentation {
  id        Int      @id @default(autoincrement())
  name      String   // Ej: ‚ÄúPieza‚Äù, ‚ÄúCono‚Äù, ‚ÄúSix‚Äù
  quantity  Int      // Ej: 1, 30, 6 ‚Üí unidades reales
  unitPrice Float    // Precio por unidad en esta presentaci√≥n
  isDefault Boolean  @default(false)

  product   Product  @relation(fields: [productId], references: [id])
  productId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Category {
  id          String   @id @default(uuid())
  name        String
  description String? 
  createdAt   DateTime @default(now())

  Product   Product[]
}

model Client {
   id          String   @id @default(uuid())
   name        String 
}

model Sale {
  id            Int           @id @default(autoincrement())
  folio         String?
  total         Float
  status        String?        //Pendiente, Pagado
  paymentMethod String?       // Efectivo, Tarjeta, etc.
  createdAt     DateTime      @default(now())
  clientName    String?
  
  //Sucursal
  branch        String?  @default("Sucursal Defult") 
 
  //Caja de cobro
  cashRegister  String?   @default("Caja 1") 

  // Nuevo campo de sincronizaci√≥n
  syncStatus    String        @default("pendiente") // pendiente, enviado

  // Relaci√≥n con los detalles
  details       SaleDetail[]

  @@index([folio])
  @@index([syncStatus])
}

model SaleDetail {
  id          Int       @id @default(autoincrement())
  quantity    Float
  price       Float
  subTotal    Float
  productName String?
  createdAt   DateTime  @default(now())

  // Relaci√≥n con Sale
  saleId      Int
  sale        Sale      @relation(fields: [saleId], references: [id])

  // Relaci√≥n con Product
  productId   Int
  product     Product   @relation(fields: [productId], references: [id])

  @@index([saleId])
  @@index([productId])
}
 